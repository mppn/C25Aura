#include <stdio.h>
int findIndex(char[],int);

int main()
{
    int ind;
    char s1[120]="Ride next";
    int ch='n';
    ind=findIndex(s1,ch);
    printf("\n char %c is found at Index : %d",(char) ch,ind);
    printf("\n");
    return 0;
}

int findIndex(char *x, int ch)
{
   int i=0;
    while(1)
    {
        if(x[i]==(char)ch)
        {
            break;
        }
        i++;
    }
    return i;
}
