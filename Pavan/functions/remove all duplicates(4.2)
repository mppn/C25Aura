//The logic to delete the duplicate elements in an array
{
for(i=0;i<number;i++)
{
   for(j = i+1; j < number; j++)
   {
      if(a[i] == a[j])
      {
         for(k = j; k <number; k++)
         {
            a[k] = a[k+1];
         }
         j--;
         number--;
      }
   }
}    

//to display in single diemensional integer array
{
for(i=0;i<number;i++)
{
   printf("%d ",a[i]);
}
